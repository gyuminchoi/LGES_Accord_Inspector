<Window x:Class="Dialog.IOMonitor.Views.IOControllerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dialog.IOMonitor.Views"
        
        xmlns:ioM="clr-namespace:Service.IOController.UI.Units;assembly=Service.IOController"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:viewModels="clr-namespace:Dialog.IOMonitor.ViewModels"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        d:DataContext="{d:DesignInstance Type=viewModels:IOControllerViewModel, IsDesignTimeCreatable=False}"
        
        mc:Ignorable="d"
        Title="IOControllerWindow" Height="450" Width="800" Background="#333333">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Closing">
            <b:InvokeCommandAction Command="{Binding ClosingCommand}"/>
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>

        <ioM:IOControllerControl Margin="10" IOManager="{Binding IOManager}" IsMonitoring="{Binding IsMonitoring}"/>
    </Grid>
</Window>
