<UserControl x:Class="UI.ImageViewer.Views.ImageViewerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.ImageViewer.Views"
             
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:viewModels="clr-namespace:UI.ImageViewer.ViewModels"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance Type=viewModels:ImageViewerViewModel, IsDesignTimeCreatable=False}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Top Viewer -->
            <ColumnDefinition/>
            <!-- Bottom Viewer -->
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!-- Top Viewer -->
        <Border Grid.Column="0" Margin="0,0,5,0" BorderBrush="DarkGray" BorderThickness="2">
            <Grid>
                <StackPanel>
                    <!-- Info -->
                    <TextBlock Margin="5"
                               FontSize="18" Foreground="#9EF048" FontWeight="Bold"
                               Text="상부"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="5"
                                           FontSize="14" Foreground="#9EF048" 
                                           Text="Quantity found : "/>
                        <TextBlock Margin="5"
                                           FontSize="14" Foreground="#9EF048" 
                                           Text="{Binding TopQuantity}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="5"
                                           FontSize="14" Foreground="#9EF048" 
                                           Text="Frame Count : "/>
                        <TextBlock Margin="5"
                                           FontSize="14" Foreground="#9EF048" 
                                           Text="{Binding TopFrameCount}"/>
                    </StackPanel>
                </StackPanel>
                <!-- Image -->
                <Image Panel.ZIndex="0" Source="{Binding TopOriginImg}"/>
                <Image Panel.ZIndex="1" Source="{Binding TopOverlayImg}"/>
            </Grid>
        </Border>
        
        <!-- Bottom Viewer -->
        <Border Grid.Column="1" Margin="5,0,0,0" BorderBrush="DarkGray" BorderThickness="2">
            <Grid>
                <StackPanel>
                    <!-- Info -->
                    <TextBlock Margin="5"
                               FontSize="18" Foreground="#9EF048" FontWeight="Bold"
                               Text="하부"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="5"
                                           FontSize="14" Foreground="#9EF048" 
                                           Text="Quantity found : "/>
                        <TextBlock Margin="5"
                                           FontSize="14" Foreground="#9EF048" 
                                           Text="{Binding BottomQuantity}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="5"
                                           FontSize="14" Foreground="#9EF048" 
                                           Text="Frame Count : "/>
                        <TextBlock Margin="5"
                                           FontSize="14" Foreground="#9EF048" 
                                           Text="{Binding BottomFrameCount}"/>
                    </StackPanel>
                </StackPanel>
                <!-- Image -->
                <Image Panel.ZIndex="0" Source="{Binding BottomOriginImg}"/>
                <Image Panel.ZIndex="1" Source="{Binding BottomOverlayImg}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
